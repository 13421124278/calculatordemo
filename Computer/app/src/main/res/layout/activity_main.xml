<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"/>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:background="@drawable/cornor"
            android:inputType="none"
            android:editable="false"
            android:gravity="right|bottom"
            android:hint="0"/>

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/bt_7"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_7"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"/>

                    <Button
                        android:id="@+id/bt_8"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_8"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp" />

                    <Button
                        android:id="@+id/bt_9"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_9"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/bt_4"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_4"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp" />

                    <Button
                        android:id="@+id/bt_5"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_5"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"/>

                    <Button
                        android:id="@+id/bt_6"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_6"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/bt_1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_1"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp" />

                    <Button
                        android:id="@+id/bt_2"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_2"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp" />

                    <Button
                        android:id="@+id/bt_3"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_3"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/bt_0"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_0"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp" />

                    <Button
                        android:id="@+id/bt_point"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="25sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="7.5dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_point"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"/>
                </LinearLayout>
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/bt_ce"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/bt_ce"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp" />

                    <Button
                        android:id="@+id/bt_backspace"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/bt_backspace"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/bt_plus"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_plus"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp" />

                    <Button
                        android:id="@+id/bt_minus"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_minus"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/bt_multi"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_multi"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp" />

                    <Button
                        android:id="@+id/bt_div"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:background="@drawable/cornor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="@string/bt_div"
                        android:gravity="bottom|right"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/bt_result"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:background="@drawable/cornor"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/bt_result"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp" />
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>